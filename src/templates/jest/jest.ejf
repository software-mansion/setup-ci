<%
const isMonorepo = props.pathRelativeToRoot !== '.'

const install = {
  yarn: "yarn install --immutable",
  npm: "npm ci"
}
%>

name: Run Jest tests

on:
  pull_request: <%= (isMonorepo) ? `
    paths:
      - ${props.pathRelativeToRoot}/**` : "" %>

jobs:
  jest:
    name: Jest
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ— Setup repo
        uses: actions/checkout@v4

      - name: ğŸŒ¿ Setup Node
        uses: actions/setup-node@v4
        with:
          node-version-file: '<%= props.nodeVersionFile %>'
          cache: '<%= props.packageManager %>'

      - name: ğŸ“¦ Install dependencies
        run: <%= install[props.packageManager] %>

      - name: ğŸ­ Run Jest
        run: <%= props.packageManager %> run test
        <%= (isMonorepo) ?
          `working-directory: ${props.pathRelativeToRoot}` : "" %>
