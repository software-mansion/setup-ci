<%
const isMonorepo = props.pathRelativeToRoot !== '.'

const install = {
  yarn: "yarn install --immutable",
  npm: "npm ci"
}

const startBundler = {
  yarn: `yarn ${(isMonorepo) ? `--cwd ${props.pathRelativeToRoot} ` : ""}start`,
  npm: `npm run start ${(isMonorepo) ? `--prefix ${props.pathRelativeToRoot}` : ""}`
}

const runTests = {
  yarn: `yarn ${(isMonorepo) ? `--cwd ${props.pathRelativeToRoot} ` : ""}maestro:test`,
  npm: `npm run maestro:test ${(isMonorepo) ? `--prefix ${props.pathRelativeToRoot}` : ""}`
}
%>

name: Maestro Test iOS

on:
  pull_request: <%= (props.pathRelativeToRoot !== '.') ? `
    paths:
      - ${props.pathRelativeToRoot}/**` : "" %>

jobs:
  build-debug-ios:
    name: Build iOS Debug App
    uses: ./.github/workflows/<%= props.iOSDebugBuildWorkflowFileName %>

  maestro-test-ios:
    name: Maestro Test iOS
    needs: build-debug-ios
    runs-on: macos-latest
    timeout-minutes: 60
    permissions:
      checks: read
      contents: read
    concurrency:
      group: ${{ github.workflow }}-${{ github.ref }}
      cancel-in-progress: true
    steps:
      - name: üèó Checkout repository
        uses: actions/checkout@v4

      - name: üêõ Restore debug build from cache
        uses: actions/cache/restore@v4
        with:
          path: ios-debug-build/
          key: ${{ needs.build-debug-ios.outputs.build-cache-key }}

      - name: üåø Setup Node 20
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: '<%= props.packageManager %>'

      - name: ‚òï Setup JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'zulu'

      - name: üì¶ Install dependencies
        run: <%= install[props.packageManager] %>

      - name: üì¶ Install macOS dependencies
        run: |
          brew tap facebook/fb
          brew install facebook/fb/idb-companion

      - name: üì¶ Install Maestro
        run: |
          MAESTRO_VERSION=1.38.1
          curl -fsSL "https://get.maestro.mobile.dev" | bash
          echo "$HOME/.maestro/bin" >> $GITHUB_PATH

      - name: üì± Boot iOS Simulator (iPhone 15)
        run: |
          DEVICE_ID=$(xcrun simctl list devices available | grep "iPhone 15" | head -n 1 | awk -F "[()]" '{print $2}')
          if [ -z "$DEVICE_ID" ]; then
            echo "No available simulator found for the criteria."
            exit 1
          fi

          echo "Booting iPhone 15 simulator with DEVICE_ID=$DEVICE_ID..."
          xcrun simctl boot "$DEVICE_ID" || true

          TIMEOUT=120
          START_TIME=$(date +%s)
          echo "Waiting for simulator to boot..."

          while true; do
            CURRENT_TIME=$(date +%s)
            ELAPSED_TIME=$((CURRENT_TIME - START_TIME))

            if [ $ELAPSED_TIME -ge $TIMEOUT ]; then
              echo "Timeout: simulator failed to boot for $TIMEOUT seconds."
              exit 1
            fi

            STATUS=$(xcrun simctl list | grep "$DEVICE_ID" | grep "(Booted)")
            if [[ -n "$STATUS" ]]; then
              echo "Simulator is booted!"
              break
            else
              echo "Still waiting for the simulator to boot..."
              sleep 5
            fi
          done

      - name: üöá Run Metro bundler in the background
        uses: miguelteixeiraa/action-run-in-background@v1
        with:
          script: <%= startBundler[props.packageManager] %>
          readiness-script: |
            if curl -sSf http://localhost:8081 > /dev/null; then
                echo "curl request to metro was successful."
            else
                echo "curl request to metro failed."
                exit 1
            fi

      - name: üß™ Run Maestro tests
        run: |
          xcrun simctl install booted ios-debug-build/ios-debug.app
          <%= runTests[props.packageManager] %>
        env:
          MAESTRO_DRIVER_STARTUP_TIMEOUT: 120000

      - name: üì§ Store debug output if failed
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: maestro-debug-output-ios
          path: <%= props.pathRelativeToRoot %>/maestro-debug-output/**/*
          include-hidden-files: true
          overwrite: true
