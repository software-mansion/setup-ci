<%
const isMonorepo = props.pathRelativeToRoot !== '.'

const install = {
  yarn: "yarn",
  npm: "npm install"
}
%>

name: EAS DevClient Build

on:
  push:
    branches: [main]
  pull_request: <%= (isMonorepo) ? `
    paths:
      - ${props.pathRelativeToRoot}/**` : "" %>
    types: [opened, synchronize]

jobs:
  dev-client-build:
    name: EAS DevClient Build
    runs-on: ubuntu-latest
    concurrency: fingerprint-${{ github.event_name != 'pull_request' && 'main' || github.run_id }}
    permissions:
      pull-requests: write
      actions: write
      contents: read
      packages: write
    steps:
      - name: ğŸ” Check for EXPO_TOKEN
        run: |
          if [ -z "${{ secrets.EXPO_TOKEN }}" ]; then
            echo "You must provide an EXPO_TOKEN secret linked to this project's Expo account in this repo's secrets. Learn more: https://docs.expo.dev/eas-update/github-actions"
            exit 1
          fi

      - name: ğŸ— Setup repo
        uses: actions/checkout@v4

      - name: âš™ï¸ Setup EAS
        uses: expo/expo-github-action@v8
        with:
          eas-version: latest
          token: ${{ secrets.EXPO_TOKEN }}

      - name: ğŸ“¦ Install dependencies
        run: <%= install[props.packageManager] %>

      - name: ğŸ› ï¸ Create DevClient build if needed
        uses: expo/expo-github-action/preview-build@main
        with:
          <%= (isMonorepo) ? `working-directory: ${props.pathRelativeToRoot}` : '' %>
          command: eas build --profile development --platform all
