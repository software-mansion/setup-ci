<%
const install = {
  yarn: "yarn",
  npm: "npm install"
}

const build = {
  yarn: `yarn --cwd ${props.pathRelativeToRoot} build:release:ios`,
  npm: `npm run build:release:ios --prefix ${props.pathRelativeToRoot}`
}
%>

name: Build iOS Release App

on: [pull_request]

jobs:
  lookup-cached-build:
    runs-on: ubuntu-latest
    outputs:
      build-exists: ${{ steps.ios-release-restore.outputs.cache-hit }}
    steps:
      - name: ğŸ› Try to restore build from cache
        id: ios-release-restore
        uses: actions/cache/restore@v4
        with:
          lookup-only: true
          key: ios-release-build-${{ github.sha }}

  build-release-ios:
    needs: lookup-cached-build 
    if: needs.lookup-cached-build.outputs.build-exists != 'true'
    runs-on: macos-latest
    steps:
      - name: ğŸ— Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ“¦ Install dependencies
        run: <%= install[props.packageManager] %>

      - name: ğŸ”¨ Use latest stable Xcode
        uses: maxim-lobanov/setup-xcode@v1
        with:
          xcode-version: latest-stable

      - name: ğŸ› ï¸ Build
        run: <%= build[props.packageManager] %>

      - name: ğŸ“ Prepare cache folder 
        run: |
          mkdir ios-release-build
          mv ios/build/Build/Products/Release-iphonesimulator/<%= props.iOsAppName %>.app ios-release-build/ios-release.app

      - name: ğŸ“¡ Store built app in cache
        id: ios-release-save
        uses: actions/cache/save@v4
        with:
          path: ios-release-build/
          key: ios-release-build-${{ github.sha }}
