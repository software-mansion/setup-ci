<%
const install = {
  yarn: "yarn",
  npm: "npm install"
}

const run = {
  yarn: `yarn --cwd ${props.pathRelativeToRoot} test`,
  npm: `npm run test --prefix ${props.pathRelativeToRoot}`
}
%>

name: Run Jest tests
on:
  pull_request:
    paths:
      - <%= ${props.pathRelativeToRoot} %>/**
jobs:
   jest:
      name: Jest
      runs-on: ubuntu-latest
      steps:
         - name: ğŸ— Setup repo
           uses: actions/checkout@v4

         - name: ğŸ“¦ Install dependencies
           run: <%= install[props.packageManager] %>

         - name: ğŸ­ Run Jest
           run: <%= run[props.packageManager] %>
