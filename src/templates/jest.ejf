<%
const install = {
  yarn: "yarn",
  npm: "npm install"
}

const run = {
  yarn: "yarn",
  npm: "npm run"
}
%>

name: Run Jest tests
on: [pull_request]

jobs:
   test:
      name: Jest
      runs-on: ubuntu-latest
      steps:
         - name: ğŸ— Setup repo
           uses: actions/checkout@v4

         - name: ğŸ“¦ Install dependencies
           run: <%= install[props.packageManager] %>

         - name: ğŸ­ Run Jest
           run: <%= run[props.packageManager] %> test
