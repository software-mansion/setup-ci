<%
const install = {
  yarn: "yarn",
  npm: "npm install"
}

const build = {
  yarn: `yarn --cwd ${props.pathRelativeToRoot} build:debug:ios`,
  npm: `npm run build:debug:ios --prefix ${props.pathRelativeToRoot}`
}
%>

name: Build iOS Debug App

on: [pull_request]

jobs:
  build-debug-ios:
    runs-on: macos-latest
    steps:
      - name: ğŸ— Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ“¦ Install dependencies
        run: <%= install[props.packageManager] %>

      - name: ğŸ”¨ Use latest stable Xcode
        uses: maxim-lobanov/setup-xcode@v1
        with:
          xcode-version: latest-stable

      - name: ğŸ› ï¸ Build
        run: <%= build[props.packageManager] %>

      - name: ğŸ“ Prepare cache folder 
        run: |
          mkdir ios-debug-build
          mv ios/build/Build/Products/Debug-iphonesimulator/<%= props.iOSAppName %>.app ios-debug-build/ios-debug.app

      - name: ğŸ“¡ Store built app in cache
        id: ios-debug-save
        uses: actions/cache/save@v4
        with:
          path: ios-debug-build/
          key: ios-debug-build
